local snipingEnabled = true

-- âœ… ÙˆØ§Ø¬Ù‡Ø© Ø§Ù„ØªØ­ÙƒÙ… (Ø²Ø± Ø§Ù„ØªØ¨Ø¯ÙŠÙ„)
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SnipeSettingsGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 140, 0, 35)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Text = "âœ” Auto Snipe: ON"
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 16
toggleButton.Parent = screenGui
Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(0, 6)

toggleButton.MouseButton1Click:Connect(function()
	snipingEnabled = not snipingEnabled
	if snipingEnabled then
		toggleButton.Text = "âœ” Auto Snipe: ON"
		toggleButton.TextColor3 = Color3.new(1, 1, 1)
	else
		toggleButton.Text = "âœ˜ Auto Snipe: OFF"
		toggleButton.TextColor3 = Color3.fromRGB(150, 150, 150)
	end
end)

-- âœ… ÙˆØ¸ÙŠÙØ© Ø§Ù„Ø´Ø±Ø§Ø¡
local function autoBuyItem(item)
	if not snipingEnabled then return end
	task.spawn(function()
		if not item or not item:IsA("Instance") then return end

		local itemId = item.Name
		local releaseTime = tonumber(item:GetAttribute("releaseTime"))
		local quantity = tonumber(item:GetAttribute("quantitySold"))
		local now = os.time()

		print("ğŸ“¦ Trying:", itemId, "Qty:", quantity or "?", "Release:", releaseTime or "N/A")

		if not itemId then
			warn("âŒ No itemId")
			return
		end

		if quantity and quantity >= 36 then
			print("âŒ Skipping:", itemId, "(Too much quantity:", quantity, ")")
			return
		end

		if releaseTime and now < releaseTime then
			print("â³ Waiting until release:", itemId)
			while os.time() < releaseTime and snipingEnabled do
				task.wait(0.1)
			end
		end

		local bought = 0
		while bought < 5 and snipingEnabled do
			local success, result = pcall(function()
				return BuyRF:InvokeServer(itemId)
			end)
			if success then
				bought += 1
				print("âœ… Bought:", itemId, "Attempt:", bought)
				task.wait(1.3)
			else
				warn("âŒ Failed:", result)
				task.wait(0.2)
			end
		end
	end)
end

-- âœ… Ø§Ù„Ø´Ø±Ø§Ø¡ Ø¹Ù†Ø¯ Ø¥Ø¶Ø§ÙØ© Ø¹Ù†ØµØ± Ø¬Ø¯ÙŠØ¯
Marketplace.ChildAdded:Connect(function(item)
	print("ğŸŸ¢ New item detected:", item.Name)
	autoBuyItem(item)
end)

-- âœ… Ø§Ù„ØªØ¹Ø§Ù…Ù„ Ù…Ø¹ ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¹Ù†ØµØ±
ItemRefreshed.OnClientEvent:Connect(function(itemId)
	print("ğŸ”„ Item Refreshed:", itemId)
	local item = Marketplace:FindFirstChild(itemId)
	if not item then
		task.wait(0.2)
		item = Marketplace:FindFirstChild(itemId)
	end

	if item then
		local releaseTime = tonumber(item:GetAttribute("releaseTime"))
		local now = os.time()
		if releaseTime and now < releaseTime then
			print("â³ Waiting for refreshed release:", itemId)
			while os.time() < releaseTime and snipingEnabled do
				task.wait(0.1)
			end
		end
		autoBuyItem(item)
	else
		warn("âŒ Refreshed item not found:", itemId)
	end
end)

-- âœ… Ø´Ø±Ø§Ø¡ Ø¢Ø®Ø± Ø¹Ù†ØµØ± Ø¹Ù†Ø¯ Ø§Ù„Ø§Ù†Ø¶Ù…Ø§Ù…
local lastItem, lastTime = nil, -math.huge
for _, item in ipairs(Marketplace:GetChildren()) do
	local rt = tonumber(item:GetAttribute("releaseTime"))
	if rt and rt > lastTime then
		lastItem = item
		lastTime = rt
	end
end
if lastItem then
	print("ğŸŸ¢ Buying last item at join:", lastItem.Name)
	autoBuyItem(lastItem)
else
	print("âŒ No item to buy on join.")
end

